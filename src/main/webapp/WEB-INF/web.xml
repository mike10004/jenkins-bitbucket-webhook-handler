<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>forbidden.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>WebhookHandler:jenkinsBaseUrl</param-name>
        <param-value>${jenkins-bitbucket-webhook-handler.jenkinsBaseUrl}</param-value>
    </context-param>
    <context-param>
        <param-name>WebhookHandler:simulation</param-name>
        <param-value>${jenkins-bitbucket-webhook-handler.simulation}</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>app-servlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>com.github.mike10004.jenkinsbbhook.ApplicationConfig</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>app-servlet</servlet-name>
        <url-pattern>/webhook/*</url-pattern>
    </servlet-mapping>
</web-app>
